---
import { ViewTransitions } from 'astro:transitions';
import { Navbar } from '@components/layout/react/Navbar.tsx';
import FooterComponent from '@components/layout/astro/Footer.astro';
import HeaderComponent from '@components/layout/astro/HeaderComponent.astro';
import LogoComponent from '@components/layout/astro/LogoComponent.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sargento Pimienta Page" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{title} | Sargento Pimienta 2.0</title>
	</head>
	<body>
		<HeaderComponent transition:persist>
			<LogoComponent slot='logo'/>
			<Navbar slot='nav' client:load />
		</HeaderComponent>
		<main class="relative p-2 md:mt-0 mt-20">
			<slot />
		</main>
		<FooterComponent />
		<script>
			import { $theme } from "@store/global";
			//todo: persist theme in localstorage
			function getTheme() {
				if($theme.get()) {
					console.log('theme from store %s', $theme.get());
					return $theme.get();
				}

				if(document.documentElement.dataset.theme) {
					return document.documentElement.dataset.theme;
				}
				return 'light';
			}

			document.addEventListener('astro:page-load', () => {
				const theme = getTheme();

				$theme.set(theme);
				document.documentElement.dataset.theme = theme;
			});

			$theme.subscribe((value) => {
				document.documentElement.dataset.theme = value;
			});
		</script>
	</body>
</html>

<style>
	body {
		height: 100vh;
	}
</style>