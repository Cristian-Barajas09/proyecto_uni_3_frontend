---
import { ViewTransitions } from 'astro:transitions';
import { Panel } from '@components/admin/layout/Panel/Panel'
import {LayoutContainer} from '@components/admin/layout/LayoutContainer'
import { $theme } from '@store/global';


interface Props {
    title: string;
}

const { title } = Astro.props



---

<!DOCTYPE html>
<html lang="en" data-theme='dark'>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sargento Pimiento Admin | {title}</title>
    <ViewTransitions fallback='none'/>
    <link rel="icon" type="image/x-icon" href="/logo_footer.png">
</head>
<body class="">
    <Panel transition:persist client:load />
    <LayoutContainer client:load>
        <slot/>
    </LayoutContainer>
</body>
</html>


<style>
    html {

        overflow-x: hidden;
    }
    body {
        height: 100vh;
        margin: 0;
        padding: 0;
        width: 100vw;
        display: flex;
    }
</style>